<section class="top-main-page">

	<div class="title-container">
		<h1 class="site-title">Cooking Craze
		</h1>
		<img class="r" src="/images/logo.svg" alt="logo">
	</div>

	<div class="search-recipe-container">
		<form class"search-bar" action="/MainPage" method="get">
			<input type="text" action="/get" id="searchRecipe" class="search-recipe" name="find-recipe" placeholder="Rechercher une recettes...">
			<button class="find" type="submit">Rechercher</button>
		</form>
	</div>

	<div class="login-signup">
		{% if user.id %}


			<a class="login" href="/login">ocucococ</a>
			<a class="signup" href="/subscribe">S'CCCCc</a>


		
       {% else %}
        
		<a class="login" href="/login">Connexion</a>
		<a class="signup" href="/subscribe">S'inscrire</a>
        
        {% endif %}
	</div>

</section>

<section class="recipes-container">

	<div class="h2-container">
		<h2 class="recipes">Nos recettes</h2>
		<h3 class="show-more-text">Voir plus</h3>
		<a class="show-more-button" href="/allRecipes">-></a>
	</div>
	<ul class="images-container-recipes">
		{% for recipe in recipes %}
			<li>
				<a href="/recipeDetail/{{recipe.id }}"><img src="{{recipe.image}}" alt="recipes"></a>
				<h3>{{recipe.recipeTitle }}</h3>
			</li>
		{% endfor %}
	</ul>

</section>

<section class="foot-page">

	<div class="container-day">
		<div class="day-recipe">
			<h2 class="day-recipe-title">Nos recettes du jour</h2>
		</div>
		<ul class="images-container-day">
			{% for i in 0..1 %}

				<li>
					<a href="/recipeDetail/{{recipes[i].id }}"><img class="day-img" src="{{recipes[i].image}}" alt="recipes"></a>
					<h3>{{recipes[i].recipeTitle }}</h3>
				</li>
			{% endfor %}
		</ul>
	</div>

	<div class="favoris">
		<h2 class="fav-recipe-title">Vos favoris</h2>

	</div>


</section>
